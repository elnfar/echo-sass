// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"

}


model User {
    id String @id @default(uuid())
    email String @unique
    name  String?
    avatar String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    tenantId String
    tenant Tenant @relation(fields: [tenantId], references: [id])
    activites Activity[]
    @@index([tenantId])
}

model Tenant {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String?
  users User[]
  activities Activity[]

}


model Activity {
    id String @id @default(uuid())
    name String?
    startAt DateTime
    endAt DateTime?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    tenantId String
    tenant Tenant @relation(fields: [tenantId],references: [id])
    userId String
    user User @relation(fields: [userId],references: [id])


    @@index([userId])
    @@index([tenantId])
}